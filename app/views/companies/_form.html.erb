<%= form_for @company, :html => {:class => "form-horizontal form-label-left"}  do |f| %>
    <% if @company.errors.any? %>
        <h2><%= pluralize(@company.errors.count, "error")%> zorgde ervoor dat de wijzigingen niet opgeslagen kon worden.</h2>
        <ul>
            <% @company.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
        </ul>
    <% end %>

    <div class="form-group">
        <%= f.label :company_name, 'Naam van bedrijf', class: 'control-label col-md-3 col-sm-3 col-xs-12' %>
        <div class="col-md-6 col-sm-6 col-xs-12">
            <%= f.text_field :company_name, :placeholder => 'Bedrijfsnaam', class: 'form-control col-md-7 col-xs-12', :required => true, autofocus: true %><br>
        </div>
    </div>
    
    <div class="form-group">
        <%= f.label :company_address, 'Adres', class: 'control-label col-md-3 col-sm-3 col-xs-12' %>
        <div class="col-md-6 col-sm-6 col-xs-12">
            <%= f.text_field :company_address, :placeholder => 'Adres', class: 'form-control col-md-7 col-xs-12', :required => true %><br>
        </div>
    </div>
    
    <div class="form-group">
        <%= f.label :company_zipcode, 'Postcode', class: 'control-label col-md-3 col-sm-3 col-xs-12' %>
        <div class="col-md-6 col-sm-6 col-xs-12">
            <%= f.text_field :company_zipcode, :placeholder => 'Postcode', id: 'company_zipcode', class: 'form-control col-md-7 col-xs-12', :required => true %><br>
        </div>
    </div>
    
    <div class="form-group">
        <%= f.label :company_place, 'Plaats', class: 'control-label col-md-3 col-sm-3 col-xs-12' %>
        <div class="col-md-6 col-sm-6 col-xs-12">
            <%= f.text_field :company_place, :placeholder => 'Plaats', class: 'form-control col-md-7 col-xs-12', :required => true %><br>
        </div>
    </div>
    
    <div class="form-group">
        <%= f.label :company_phone, 'Telefoonnummer', class: 'control-label col-md-3 col-sm-3 col-xs-12' %>
        <div class="col-md-6 col-sm-6 col-xs-12">
            <%= f.text_field :company_phone, :placeholder => 'Telefoonnummer', class: 'form-control col-md-7 col-xs-12', :required => true %><br>
        </div>
    </div>
    
    <div class="form-group">
        <%= f.label :company_email, 'Emailadres', class: 'control-label col-md-3 col-sm-3 col-xs-12' %>
        <div class="col-md-6 col-sm-6 col-xs-12">
            <%= f.text_field :company_email, :placeholder => 'Emailadres', class: 'form-control col-md-7 col-xs-12', :required => true %>
        </div>
    </div>
    
    <div class="form-group">
        <%= f.label :company_webaddress, 'Webadres', class: 'control-label col-md-3 col-sm-3 col-xs-12' %>
        <div class="col-md-6 col-sm-6 col-xs-12">
            <%= f.text_field :company_webaddress, :placeholder => 'Webadres', class: 'form-control col-md-7 col-xs-12', :required => true %><br>
        </div>
    </div>
    
    <div class="form-group">
        <%= f.label :company_bank_account_number, 'IBAN nummer', class: 'control-label col-md-3 col-sm-3 col-xs-12' %>
        <div class="col-md-6 col-sm-6 col-xs-12">
            <%= f.text_field :company_bank_account_number, :placeholder => 'Rekeningnummer', class: 'form-control col-md-7 col-xs-12', :required => true %><br>
        </div>
    </div>
    
    <div class="form-group">
            <%= f.label :company_bank, 'Bank', class: 'control-label col-md-3 col-sm-3 col-xs-12' %>
        <div class="col-md-6 col-sm-6 col-xs-12">
            <%= f.text_field :company_bank, :placeholder => 'Banknummer', class: 'form-control col-md-7 col-xs-12', :required => true %><br>
        </div>
    </div>
    
    <div class="form-group">
        <%= f.label :company_VAT_number, 'BTW nummer', class: 'control-label col-md-3 col-sm-3 col-xs-12' %>
        <div class="col-md-6 col-sm-6 col-xs-12">
            <%= f.text_field :company_VAT_number, :placeholder => 'BTW nummer', class: 'form-control col-md-7 col-xs-12', :required => true %><br>
        </div>
    </div>
    
    <div class="form-group">
        <%= f.label :company_CC_number, 'KvK nummer', class: 'control-label col-md-3 col-sm-3 col-xs-12' %>
        <div class="col-md-6 col-sm-6 col-xs-12">
            <%= f.text_field :company_CC_number, :placeholder => 'KVK nummer', class: 'form-control col-md-7 col-xs-12', :required => true %><br>
        </div>
    </div>
    
    <div class="form-group">
        <%= f.label :company_kilometer_compensation, 'Kilometerregistratie', class: 'control-label col-md-3 col-sm-3 col-xs-12' %>
        <div class="col-md-6 col-sm-6 col-xs-12">
            <%= f.number_field :company_kilometer_compensation, :placeholder => 'Kilometerregistratie tarief', class: 'form-control col-md-7 col-xs-12', :step => '0.01', :required => true %><br>
        </div>
    </div>
    
    <div class="form-group">
        <%= f.label :payment_time, 'Betalingsperiode', class: 'control-label col-md-3 col-sm-3 col-xs-12' %>
        <div class="col-md-6 col-sm-6 col-xs-12">
            <%= f.number_field :payment_time, :placeholder => 'Betalingsperiode in dagen', class: 'form-control col-md-7 col-xs-12', :step => '1', :required => true %><br>
        </div>
    </div>

    <div class="form-group">
        <%= f.label :terms_and_conditions, 'Algemenevoorwaarde', class: 'control-label col-md-3 col-sm-3 col-xs-12' %>
        <div class="col-md-6 col-sm-6 col-xs-12">
            <%= f.text_area :terms_and_conditions, :placeholder => 'Algemenevoorwaarde voor op factuur', class: 'form-control col-md-7 col-xs-12', :step => '0.01' %><br>
        </div>
    </div>
    
    <div class="form-group">
        <%= f.label :company_business_car, 'Auto op de zaak', class: 'control-label col-md-3 col-sm-3 col-xs-12' %>
        <div class="col-md-6 col-sm-6 col-xs-12">
            <%= f.check_box :company_business_car, class: 'form-control col-md-7 col-xs-12' %><br>
        </div>
    </div>
    
    <% if current_user.company.company_logo.exists? %>
        <div class="control-label col-md-3 col-sm-3 col-xs-12"><label>Huidig logo</label></div>
        <div>
            <%= image_tag current_user.company.company_logo.url(:thumb)%>
        </div>
    <% end %>
    
    <br/>
    <br/>
    
    <div class="form-group">
        <%= f.label :company_logo, 'Bedrijfslogo', class: 'control-label col-md-3 col-sm-3 col-xs-12' %>
        <div class="col-md-6 col-sm-6 col-xs-12">
            <%= f.file_field :company_logo, class: 'form-control col-md-7 col-xs-12' %><br>
        </div>
    </div>

    <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
        <%= link_to 'Annuleren', root_path, :class => 'btn btn-primary' %>
        <%= f.submit 'Opslaan', :class => 'btn btn-success' %>
    </div>
<% end %>