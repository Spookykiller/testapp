<%= form_for @mileage, :html => {:class =>  'form-horizontal form-label-left'} do |f| %>
    <% if @mileage.errors.any? %>
        <h2><%= pluralize(@mileage.errors.count, "error")%> zorgde ervoor dat de klant niet opgeslagen kon worden.</h2>
        <ul>
            <% @mileage.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
        </ul>
    <% end %>
    <div class="form-group">
        <%= f.label :mileage_retour, 'Retour', class: 'control-label col-md-3 col-sm-3 col-xs-12' %>
        <div class="col-md-6 col-sm-6 col-xs-12">
            <%= f.check_box :mileage_retour, class: 'form-control col-md-7 col-xs-12' %>
        </div>
    </div>
    
    <div class="form-group">
        <%= f.label :mileage_date, 'Datum', class: 'control-label col-md-3 col-sm-3 col-xs-12' %>
        <div class="col-md-6 col-sm-6 col-xs-12">
            <%= f.text_field :mileage_date, class: 'form-control col-md-7 col-xs-12' %>
            <span class="fa fa-user form-control-feedback right" aria-hidden="true"></span>
        </div>
    </div>
    
    <div class="form-group">
        <%= f.label :mileage_from, 'Vertrek plaats', class: 'control-label col-md-3 col-sm-3 col-xs-12' %>
        <div class="col-md-6 col-sm-6 col-xs-12">
            <%= f.text_field :mileage_from, class: 'form-control col-md-7 col-xs-12' %>
            <span class="fa fa-user form-control-feedback right" aria-hidden="true"></span>
        </div>
    </div>
    
    <div class="form-group">
        <%= f.label :mileage_to, 'Aankomst plaats', class: 'control-label col-md-3 col-sm-3 col-xs-12' %>
        <div class="col-md-6 col-sm-6 col-xs-12">
            <%= f.text_field :mileage_to, class: 'form-control col-md-7 col-xs-12' %>
            <span class="fa fa-user form-control-feedback right" aria-hidden="true"></span>
        </div>
    </div>
    
    <div class="form-group">
        <%= f.label :mileage_kilometers, 'Aantal kilometers (enkele reis)', class: 'control-label col-md-3 col-sm-3 col-xs-12' %>
        <div class="col-md-6 col-sm-6 col-xs-12">
            <%= f.number_field :mileage_kilometers, class: 'form-control col-md-7 col-xs-12' %>
            <span class="fa fa-user form-control-feedback right" aria-hidden="true"></span>
        </div>
    </div>
    
    
    <div class="form-group">
        <%= f.label :mileage_billable, 'Factureerbaar', class: 'control-label col-md-3 col-sm-3 col-xs-12' %>
        <div class="col-md-6 col-sm-6 col-xs-12">
           <%= f.check_box :mileage_billable, class: 'form-control col-md-7 col-xs-12' %>
        </div>
    </div>

    <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
        <%= link_to 'Annuleren', mileages_path, :class => 'btn btn-primary' %>
        <%= f.submit 'Opslaan', :class => 'btn btn-success' %>
    </div>
    
<% end %>