<!-- page content -->
<div class="right_col" role="main">
  <div class="">
    <div class="page-title">
      <div class="title_left">
        <h3>Edit <%= resource_name.to_s.humanize %></h3>
      </div>

      <div class="title_right">
        <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
          <div class="input-group">
            <input type="text" class="form-control" placeholder="Search for...">
            <span class="input-group-btn">
              <button class="btn btn-default" type="button">Go!</button>
            </span>
          </div>
        </div>
      </div>
    </div>
    
    <div class="clearfix"></div>

    <div class="row">

      <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
          <div class="x_title">
            <h2>Edit <%= resource_name.to_s.humanize %></h2>
            <ul class="nav navbar-right panel_toolbox">
              <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
              </li>
              <li><a class="help-link"><i class="fa fa-question"></i></a>
              </li>
              <li><a class="close-link"><i class="fa fa-close"></i></a>
              </li>
            </ul>
            <div class="clearfix"></div>
          </div>
          <div class="x_content">
            
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, :class =>  'form-horizontal form-label-left'}) do |f| %>
              <%= devise_error_messages! %>

              <div class="form-group">
                <%= f.label :email, "E-mailadres", class: 'control-label col-md-3 col-sm-3 col-xs-12' %>
                <div class="col-md-6 col-sm-6 col-xs-12">
                  <%= f.email_field :email, class: 'form-control col-md-7 col-xs-12', autofocus: true %>
                </div>
              </div>
              
              <div class="form-group">
                <%= f.label :user_name, "Volledige naam", class: 'control-label col-md-3 col-sm-3 col-xs-12' %>
                <div class="col-md-6 col-sm-6 col-xs-12">
                  <%= f.text_field :user_name, placeholder: "Uw volledige naam", class: 'form-control col-md-7 col-xs-12', autofocus: true %>
                </div>
              </div>
              
              <div class="form-group">
                <%= f.label :user_function, "Functie", class: 'control-label col-md-3 col-sm-3 col-xs-12' %>
                <div class="col-md-6 col-sm-6 col-xs-12">
                  <%= f.text_field :user_function, placeholder: "Functie binnen bedrijf", class: 'form-control col-md-7 col-xs-12', autofocus: true %>
                </div>
              </div>
              
              <div class="form-group">
                <%= f.label :user_phone, "Telefoonnummer", class: 'control-label col-md-3 col-sm-3 col-xs-12' %>
                <div class="col-md-6 col-sm-6 col-xs-12">
                  <%= f.number_field :user_phone, placeholder: "Telefoonnummer", class: 'form-control col-md-7 col-xs-12', autofocus: true %>
                </div>
              </div>
            
              <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                <div>Momenteel aan het wachten op confirmatie van: <%= resource.unconfirmed_email %></div>
              <% end %>
              
              <div class="form-group">
                <%= f.label :password, "Wachtwoord", class: 'control-label col-md-3 col-sm-3 col-xs-12' %>
                <div class="col-md-6 col-sm-6 col-xs-12">
                  <%= f.password_field :password, class: 'form-control col-md-7 col-xs-12', placeholder: "Laat leeg wanneer wachtwoord niet gewijzigd hoeft te worden.", autocomplete: "off" %>
                </div>
              </div>
            
              <div class="form-group">
                <%= f.label :password_confirmation, "Wachtwoord confirmatie", class: 'control-label col-md-3 col-sm-3 col-xs-12'  %>
                <div class="col-md-6 col-sm-6 col-xs-12">  
                  <%= f.password_field :password_confirmation, class: 'form-control col-md-7 col-xs-12', autocomplete: "off" %>
                </div>
              </div>
            
              <div class="form-group">
                <%= f.label :current_password, "Huidige wachtwoord", class: 'control-label col-md-3 col-sm-3 col-xs-12'  %>
                <div class="col-md-6 col-sm-6 col-xs-12">  
                  <%= f.password_field :current_password, class: 'form-control col-md-7 col-xs-12', placeholder: "We hebben uw huidige wachtwoord nodig om uw wijzigingen door te voeren.", autocomplete: "off" %>
                </div>
              </div>

              <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                <%= link_to 'Terug', :back, :class => 'btn btn-primary' %>
                <%= f.submit 'Updaten', :class => 'btn btn-success' %>
                <i>(wijzigingen worden alleen opgeslagen wanneer uw huidige wachtwoord wordt opgegeven)</i>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- /page content -->