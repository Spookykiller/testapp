<!-- page content -->
<div class="right_col" role="main" style="height:100vh">
  <div class="">
    <div class="page-title">
      <div class="title_left">
        <h3>Urenregistratie</h3>
      </div>

      <div class="title_right">
        <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
          <div class="input-group">
            <input type="text" class="form-control" placeholder="Search for...">
                    <span class="input-group-btn">
                              <button class="btn btn-default" type="button">Go!</button>
                          </span>
          </div>
        </div>
      </div>
    </div>
    <div class="clearfix"></div>

    <div class="row">

      <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
          <div class="x_title">
            <h2>Uren</h2>
            <ul class="nav navbar-right panel_toolbox">
              <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
              </li>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                <ul class="dropdown-menu" role="menu">
                  <li><a href="#">Settings 1</a>
                  </li>
                  <li><a href="#">Settings 2</a>
                  </li>
                </ul>
              </li>
              <li><a class="close-link"><i class="fa fa-close"></i></a>
              </li>
            </ul>
            <div class="clearfix"></div>
          </div>
          <div class="x_content">
            <table class="table table-striped jambo_table bulk_action">
              <thead>
                <tr class="headings">
                    <th class="column-title">Projectnaam</th>
                    <th class="column-title">Beschrijving</th>
                    <th class="column-title">Datum</th>
                    <th class="column-title">Uren</th>
                    <th class="column-title">Billable</th>
                    <th class="column-title">Opmerkingen</th>
                    <th class="column-title"></th>
                </tr>
              </thead>
            <% @timesheets.each do |timesheet| %>
              <tbody>
                  <tr>
                    <td><%= timesheet.timesheet_name %></td>
                    <td><%= timesheet.timesheet_description %></td>
                    <td><%= timesheet.timesheet_date %></td>
                    <td><%= timesheet.timesheet_hours %></td>
                    <td>
                        <% if timesheet.timesheet_billable == true %>
                            Ja
                        <% else %>
                            Nee
                        <% end %>
                    </td>
                    <td><%= timesheet.timesheet_comment %></td>
                    <td>
                    <%= link_to edit_timesheet_path(timesheet) do %>
                        <img src="/images/pencil-edit-button.png" alt="Delete" class="edit_icon">
                    <% end %>
                    <%= link_to timesheet_path(timesheet), method: :delete, data: { confirm: "Weet je zeker dat je deze urenregistratie wilt verwijderen" } do %>
                        <img src="/images/delete.png" alt="Wijzig" class="edit_icon">
                    <% end %>
                    </td>
                  </tr>
              </tbody>
            <% end %>
            </table>
            <div class="col-md-6 col-md-offset-5">
                <%= link_to new_timesheet_path do %>
                    <button class="btn btn-primary">Nieuwe urenregistratie</button>
                <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- /page content -->