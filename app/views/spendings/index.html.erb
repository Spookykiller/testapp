<!-- page content -->
<div class="right_col" role="main" style="height:100vh">
  <div class="">
    <div class="page-title">
      <div class="title_left">
        <h3>Mijn uitgaven</h3>
      </div>

      <div class="title_right">
        <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
          <div class="input-group">
            <input type="text" class="form-control" placeholder="Search for...">
                    <span class="input-group-btn">
                              <button class="btn btn-default" type="button">Go!</button>
                          </span>
          </div>
        </div>
      </div>
    </div>
    <div class="clearfix"></div>

    <div class="row">

      <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
          <div class="x_title">
            <h2>Uitgaven</h2>
            <ul class="nav navbar-right panel_toolbox">
              <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
              </li>
              <li><a class="help-link"><i class="fa fa-question"></i></a>
              </li>
              <li><a class="close-link"><i class="fa fa-close"></i></a>
              </li>
            </ul>
            <div class="clearfix"></div>
          </div>
          <div class="x_content">
            <table class="table table-striped jambo_table bulk_action" id="spendings">
              <thead>
                <tr class="headings">
                  <th class="column-title"><%= sortable "spending_follow_number", "Uitgave nmr." %></th>
                  <th class="column-title"><%= sortable "spending_date", "Datum" %></th>
                  <th class="column-title"><%= sortable "spending_company_name", "Naam bedrijf"  %></th>
                  <th class="column-title"><%= sortable "spending_cost_description", "Omschrijving kosten" %></th>
                  <th class="column-title"><%= sortable "spending_invoice_number_creditor", "Nummer crediteur" %></th>
                  <th class="column-title"><%= sortable "spending_type", "Soort uitgave" %></th>
                  <th class="column-title"><%= sortable "spending_exclusive_VAT", "Bedrag ex BTW" %></th>
                  <th class="column-title"><%= sortable "spending_VAT", "BTW" %></th>
                  <th class="column-title"><%= sortable "spending_including_VAT", "Bedrag incl BTW" %></th>
                  <th class="column-title"><%= sortable "spending_when_paid", "Datum betaald" %></th>
                  <th class="column-title"><%= sortable "spending_paid", "Betaald" %></th>
                  <th class="column-title"><%= sortable "spending_left", "Nog over" %></th>
                  <th class="column-title"></th>
                </tr>
              </thead>
            
              <tbody>
                <% @spendings.each do |spending| %>
                  <tr>
                    <td><%= spending.spending_follow_number %></td>
                    <td><%= spending.spending_date %></td>
                    <td><%= spending.spending_company_name %></td>
                    <td><%= spending.spending_cost_description %></td>
                    <td><%= spending.spending_invoice_number_creditor %></td>
                    <td><%= spending.spending_type %></td>
                    <td>
                      € <%= rounding(spending.spending_exclusive_VAT) %>
                    </td>
                    <td> 
                      € <%= rounding(spending.spending_VAT) %>
                    </td>
                    <td>
                      € <%= rounding(spending.spending_including_VAT) %>
                    </td>
                    <td><%= spending.spending_when_paid %></td>
                    <td>€ <%= rounding(spending.spending_paid) %></td>
                    <td>
                      € <%= rounding(spending.spending_left) %>
                    </td>
                    <td>
                    <%= link_to edit_spending_path(spending) do %>
                      <img src="/images/pencil-edit-button.png" alt="Delete" class="edit_icon">
                    <% end %>
                    <%= link_to spending_path(spending), method: :delete, data: { confirm: "Weet je zeker dat je deze uitgave wilt verwijderen?" } do %>
                      <img src="/images/delete.png" alt="Wijzig" class="edit_icon">
                    <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            
            </table>
            <div class="col-md-6 col-md-offset-5">
                <%= link_to new_spending_path do %>
                    <button class="btn btn-primary">Nieuwe uitgave</button>
                <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- /page content -->