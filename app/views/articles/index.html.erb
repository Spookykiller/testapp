<!-- page content -->
<div class="right_col" role="main" style="height:100vh">
  <div class="">
    <div class="page-title">
      <div class="title_left">
        <h3>Mijn artikelen</h3>
      </div>

      <div class="title_right">
        <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
          <div class="input-group">
            <input type="text" class="form-control" placeholder="Search for...">
                    <span class="input-group-btn">
                              <button class="btn btn-default" type="button">Go!</button>
                          </span>
          </div>
        </div>
      </div>
    </div>
    <div class="clearfix"></div>

    <div class="row">

      <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
          <div class="x_title">
            <h2>Artikelen</h2>
            <ul class="nav navbar-right panel_toolbox">
              <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
              </li>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                <ul class="dropdown-menu" role="menu">
                  <li><a href="#">Settings 1</a>
                  </li>
                  <li><a href="#">Settings 2</a>
                  </li>
                </ul>
              </li>
              <li><a class="close-link"><i class="fa fa-close"></i></a>
              </li>
            </ul>
            <div class="clearfix"></div>
          </div>
          <div class="x_content">
            <table class="table table-striped jambo_table bulk_action">
              <thead>
                <tr class="headings">
                    <th class="column-title">Code</th>
                    <th class="column-title">Bescrhijving</th>
                    <th class="column-title">Eenheid</th>
                    <th class="column-title">BTW percentage</th>
                    <th class="column-title">Prijs per eenheid</th>
                    <th class="column-title">Acties</th>
                </tr>
              </thead>
            <% @articles.each do |article| %>
              <tbody>
                  <tr>
                      <td><%= article.article_code %></td>
                      <td><%= article.article_description %></td>
                      <td><%= article.article_unit %></td>
                      <td><%= article.article_VAT_percentage.round(0) %> %</td>
                      <td><%= article.article_unit_price.round(2) %></td>
                      <td>
                      <%= link_to edit_article_path(article) do %>
                          <img src="/images/pencil-edit-button.png" alt="Delete" class="edit_icon">
                      <% end %>
                      <%= link_to article_path(article), method: :delete, data: { confirm: "Weet je zeker dat je dit artikel wilt verwijderen?" } do %>
                          <img src="/images/delete.png" alt="Wijzig" class="edit_icon">
                      <% end %>
                      </td>
                  </tr>
              </tbody>
            <% end %>
            </table>
            <div class="col-md-6 col-md-offset-5">
                <%= link_to new_article_path do %>
                    <button class="btn btn-primary">Nieuwe artikel</button>
                <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- /page content -->