<%= form_for @invoice, :url => {:action => "update_earning"}, :html => {:class =>  'form-horizontal form-label-left'} do |f| %>
    <% if @invoice.errors.any? %>
        <h2><%= pluralize(@invoice.errors.count, "error")%> zorgde ervoor dat de klant niet opgeslagen kon worden.</h2>
        <ul>
            <% @invoice.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
        </ul>
    <% end %>

    <div class="form-group">
        <%= f.label :invoice_when_paid, 'Wanneer betaald', class: 'control-label col-md-3 col-sm-3 col-xs-12' %>
        <div class="col-md-6 col-sm-6 col-xs-12">
            <%= f.text_field :invoice_when_paid, class: 'form-control col-md-7 col-xs-12', id: 'datepicker'%>
        </div>
    </div>
    
    <div class="form-group">
        <%= f.label :invoice_paid, 'Betaald', class: 'control-label col-md-3 col-sm-3 col-xs-12' %>
        <div class="col-md-6 col-sm-6 col-xs-12">
            <%= f.number_field :invoice_paid, class: 'form-control col-md-7 col-xs-12', :step => '0.01' %>
        </div>
    </div>
    
    <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
        <%= link_to 'Annuleren', invoices_path, :class => 'btn btn-primary' %>
        <%= f.submit 'Opslaan', :class => 'btn btn-success' %>
    </div>
    
<% end %>