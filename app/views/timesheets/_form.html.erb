<%= form_for @timesheet, :html => {:class => 'form-horizontal form-label-left'} do |f| %>
    <% if @timesheet.errors.any? %>
        <h2><%= pluralize(@timesheet.errors.count, "error")%> zorgde ervoor dat de klant niet opgeslagen kon worden.</h2>
        <ul>
            <% @timesheet.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
        </ul>
    <% end %>
    
    
    <div class="form-group">
        <%= f.label :timesheet_project_number, 'Projectnummer' , class: 'control-label col-md-3 col-sm-3 col-xs-12' %>
        <div class="col-md-6 col-sm-6 col-xs-12">
            <%= f.number_field :timesheet_project_number, class: 'form-control col-md-7 col-xs-12' %><br>
        </div>
    </div>
    
    <div class="form-group">
        <%= f.label :timesheet_name, 'Projectnaam' , class: 'control-label col-md-3 col-sm-3 col-xs-12' %>
        <div class="col-md-6 col-sm-6 col-xs-12">
            <%= f.collection_select(:timesheet_name, Project.all, :project_name, :project_name, class: 'form-control') %><br>
        </div>
    </div>
    
    <div class="form-group">
        <%= f.label :timesheet_description, 'Beschrijving' , class: 'control-label col-md-3 col-sm-3 col-xs-12' %>
        <div class="col-md-6 col-sm-6 col-xs-12">
            <%= f.text_field :timesheet_description, class: 'form-control col-md-7 col-xs-12' %><br>
        </div>
    </div>
    
    <div class="form-group">
        <%= f.label :timesheet_date, 'Datum' , class: 'control-label col-md-3 col-sm-3 col-xs-12' %>
        <div class="col-md-6 col-sm-6 col-xs-12">
            <%= f.text_field :timesheet_date, class: 'form-control col-md-7 col-xs-12', id: 'datepicker' %><br>
        </div>
    </div>
    
    <div class="form-group">
        <%= f.label :timesheet_hours, 'Uren' , class: 'control-label col-md-3 col-sm-3 col-xs-12' %>
        <div class="col-md-6 col-sm-6 col-xs-12">
            <%= f.number_field :timesheet_hours, class: 'form-control col-md-7 col-xs-12' %><br>
        </div>
    </div>
    
    <div class="form-group">
        <%= f.label :timesheet_billable, 'Billable' , class: 'control-label col-md-3 col-sm-3 col-xs-12' %>
        <div class="col-md-6 col-sm-6 col-xs-12">
            <%= f.check_box :timesheet_billable, class: 'form-control col-md-7 col-xs-12' %><br>
        </div>
    </div>
    
    <div class="form-group">
        <%= f.label :timesheet_comment, 'Opmerkingen' , class: 'control-label col-md-3 col-sm-3 col-xs-12' %>
        <div class="col-md-6 col-sm-6 col-xs-12">
            <%= f.text_area :timesheet_comment, class: 'form-control col-md-7 col-xs-12' %><br>
        </div>
    </div>
    
    <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
        <%= link_to 'Annuleren', timesheets_path, :class => 'btn btn-primary' %>
        <%= f.submit 'Opslaan', :class => 'btn btn-success' %>
    </div>

<% end %>