<!-- page content -->
<div class="right_col" role="main" style="height:100vh" id="clients">
  <div class="">
    <div class="page-title">
      <div class="title_left">
        <h3>Mijn klanten</h3>
      </div>

      <div class="title_right">
        <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
          <div class="input-group">
            <input type="text" class="form-control" placeholder="Search for...">
              <span class="input-group-btn">
                <button class="btn btn-default" type="button">Go!</button>
              </span>
          </div>
        </div>
      </div>
    </div>
    <div class="clearfix"></div>

    <div class="row">

      <div class="col-md-12 col-sm-12 col-xs-12" id="client_info">
        <div class="x_panel">
          <div class="x_title">
            <h2>Klanten</h2>
            <ul class="nav navbar-right panel_toolbox">
              <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
              </li>
              <li><a class="help-link"><i class="fa fa-question"></i></a>
              </li>
              <li><a class="close-link"><i class="fa fa-close"></i></a>
              </li>
            </ul>
            <div class="clearfix"></div>
          </div>
          <div class="x_content">
            <table class="table table-striped jambo_table bulk_action">
              <thead>
                <tr class="headings">
                    <th class="column-title"><%= sortable "client_number", "Klantnummer" %></th>
                    <th class="column-title"><%= sortable "client_first_name", "Klantnaam" %></th>
                    <th class="column-title"><%= sortable "client_company_name", "Bedrijfsnaam" %></th>
                    <th class="column-title"><%= sortable "client_street", "Adres" %></th>
                    <th class="column-title"><%= sortable "client_zipcode", "Postcode" %></th>
                    <th class="column-title"><%= sortable "client_residence", "Plaats" %></th>
                    <th class="column-title">Acties</th>
                </tr>
              </thead>
              <tbody>
                <% @clients.each do |client| %>
                  <tr>
                      <td><%= client.client_number %></td>
                      <td><%= client.client_first_name + " " + client.client_last_name %></td>
                      <td><%= client.client_company_name %></td>
                      <td><%= client.client_street + " " + client.client_street_number.to_s + " " + client.client_street_addition %></td>
                      <td><%= client.client_zipcode %></td>
                      <td><%= client.client_residence %></td>
                      <td>
                      <%= link_to edit_client_path(client) do %>
                          <button class="btn btn-sm btn-default" type="button" data-placement="top" data-toggle="tooltip" data-original-title="Wijzigen"><i class="fa fa-pencil"></i></button>
                      <% end %>
                      <%= link_to client_path(client), method: :delete, data: { confirm: "Weet je zeker dat je deze klant wilt verwijderen" } do %>
                          <button class="btn btn-sm btn-default" type="button" data-placement="top" data-toggle="tooltip" data-original-title="Verwijderen"><i class="fa fa-trash-o"></i></button>
                      <% end %>
                      </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
            <div class="col-md-6 col-md-offset-5">
                <%= link_to new_client_path do %>
                    <button class="btn btn-primary">Nieuwe klant</button>
                <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- /page content -->