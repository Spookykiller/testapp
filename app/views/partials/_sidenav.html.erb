                  <% end %>
                </li>
                <li>
                  <%= link_to clients_path do %>
                    Klanten
                  <% end %>
                </li>
                <li>
                  <%= link_to pages_dashboard_path do %>
                    Dashboard
                  <% end %>
                </li>
              </ul>
            </li>
            <li><a><i class="fa fa-pencil-square-o"></i> Project-registratie <span class="fa fa-chevron-down"></span></a>
              <ul class="nav child_menu" style="display: none">
                <li>
                  <%= link_to projects_path do %>
                    Projecten
                  <% end %>
                </li>
                <li>
                  <%= link_to timesheets_path do %>
                    Urenregistratie
                  <% end %>
                </li>
                <li><a>Urenoverzicht</a>
                </li>
                <li>
                  <%= link_to articles_path do %>
                    Artikelen
                  <% end %>
                </li>
                <li>
                  <%= link_to mileages_path do %>
                    Kilometerregistratie
                  <% end %>
                </li>
              </ul>
            </li>
            <li><a><i class="fa fa-credit-card"></i> Transacties <span class="fa fa-chevron-down"></span></a>
              <ul class="nav child_menu" style="display: none">
                <li>
                  <%= link_to invoices_offer_index_path do %>
                    Offertes
                  <% end %>
                </li>
                <li>
                  <%= link_to invoices_path do %>
                    Factureren
                  <% end %>
                </li>
                <li>
                  <%= link_to invoices_earning_path do %>
                    Inkomsten
                  <% end %>
                </li>
                <li>
                <%= link_to spendings_path do %>
                  Uitgaven
                <% end %>
                </li>
              </ul>
            </li>
            <li><a><i class="fa fa-files-o"></i> Rapportages <span class="fa fa-chevron-down"></span></a>
              <ul class="nav child_menu" style="display: none">
                <li>
                  <%= link_to pages_vat_declaration_path do %>
                    BTW aangifte
                  <% end %>
                </li>
                <li>
                  <%= link_to annualaccounts_path do %>
                    Winst & verliesrekening
                  <% end %>
                </li>
              </ul>
            </li>
          </ul>
        </div>
      </div>
      <!-- /sidebar menu -->

      <!-- /menu footer buttons -->
      <div class="sidebar-footer hidden-small">
        <a data-toggle="tooltip" data-placement="top" title="Dashboard">
          <span class="fa fa-tachometer" aria-hidden="true"></span>
        </a>
        <a data-toggle="tooltip" data-placement="top" title="Hulp" id="help">
          <span class="fa fa-question-circle" aria-hidden="true"></span>
        </a>
        <a data-toggle="tooltip" data-placement="top" title="Instellingen">
          <span class="fa fa-cog" aria-hidden="true"></span>
        </a>
        <a data-toggle="tooltip" data-placement="top" title="Uitloggen">
