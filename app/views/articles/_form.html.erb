<%= form_for @article, :html => {:class =>  'form-horizontal form-label-left'} do |f| %>
    <% if @article.errors.any? %>
        <h2><%= pluralize(@article.errors.count, "error")%> zorgde ervoor dat de klant niet opgeslagen kon worden.</h2>
        <ul>
            <% @article.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
        </ul>
    <% end %>
    <div class="form-group">
        <%= f.label :article_code, 'Code', class: 'control-label col-md-3 col-sm-3 col-xs-12' %>
        <div class="col-md-6 col-sm-6 col-xs-12">
            <%= f.text_field :article_code, :placeholder => 'Artikel code', class: 'form-control col-md-7 col-xs-12' %>
        </div>
    </div>
    
    <div class="form-group">
        <%= f.label :article_description, 'Beschrijving', class: 'control-label col-md-3 col-sm-3 col-xs-12' %>
        <div class="col-md-6 col-sm-6 col-xs-12">
            <%= f.text_field :article_description, :placeholder => 'Beschrijving artikel', class: 'form-control col-md-7 col-xs-12' %>
        </div>
    </div>
    
    <div class="form-group">
        <%= f.label :article_unit, 'Eenheid', class: 'control-label col-md-3 col-sm-3 col-xs-12' %>
        <div class="col-md-6 col-sm-6 col-xs-12">
            <%= f.text_field :article_unit, class: 'form-control col-md-7 col-xs-12', placeholder: 'Bijvoorbeeld stuks, uren, kilo, liter, enz.' %>
        </div>
    </div>
    
    <div class="form-group">
        <%= f.label :article_VAT_percentage, 'BTW percentage', class: 'control-label col-md-3 col-sm-3 col-xs-12' %>
        <div class="col-md-6 col-sm-6 col-xs-12">
            <%= f.select :article_VAT_percentage, ['0%', '6%', '21%'] %>
        </div>
    </div>
    
    <div class="form-group">
        <%= f.label :article_unit_price, 'Prijs', class: 'control-label col-md-3 col-sm-3 col-xs-12' %>
        <div class="col-md-6 col-sm-6 col-xs-12">
            <%= f.number_field :article_unit_price, :placeholder => 'Prijs per eenheid', class: 'form-control col-md-7 col-xs-12', :step => '0.01' %>
        </div>
    </div>

    <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
        <%= link_to 'Annuleren', articles_path, :class => 'btn btn-primary' %>
        <%= f.submit 'Opslaan', :class => 'btn btn-success' %>
    </div>
    
<% end %>