<%= form_for @client, :html => {:class =>  'form-horizontal form-label-left'} do |f| %>
    <% if @client.errors.any? %>
        <h2><%= pluralize(@client.errors.count, "error")%> zorgde ervoor dat de klant niet opgeslagen kon worden.</h2>
        <ul>
            <% @client.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
        </ul>
    <% end %>
    <div class="form-group">
        <%= f.label :client_number, 'Klantnummer', class: 'control-label col-md-3 col-sm-3 col-xs-12' %>
        <div class="col-md-6 col-sm-6 col-xs-12">
            <%= f.number_field :client_number, class: 'form-control col-md-7 col-xs-12' %>
        </div>
    </div>
    
    <div class="form-group">
        <%= f.label :client_name, 'Klantnaam', class: 'control-label col-md-3 col-sm-3 col-xs-12' %>
        <div class="col-md-6 col-sm-6 col-xs-12">
            <%= f.text_field :client_name, class: 'form-control col-md-7 col-xs-12' %>
            <span class="fa fa-user form-control-feedback right" aria-hidden="true"></span>
        </div>
    </div>
    
    <div class="form-group">
        <%= f.label :client_contact_person, 'Contactpersoon', class: 'control-label col-md-3 col-sm-3 col-xs-12' %>
        <div class="col-md-6 col-sm-6 col-xs-12">
            <%= f.text_field :client_contact_person, class: 'form-control col-md-7 col-xs-12' %>
            <span class="fa fa-user form-control-feedback right" aria-hidden="true"></span>
        </div>
    </div>
    
    <div class="form-group">
        <%= f.label :client_address, 'Adres', class: 'control-label col-md-3 col-sm-3 col-xs-12' %>
        <div class="col-md-6 col-sm-6 col-xs-12">
            <%= f.text_field :client_address, class: 'form-control col-md-7 col-xs-12' %>
            <span class="fa fa-user form-control-feedback right" aria-hidden="true"></span>
        </div>
    </div>
    
    <div class="form-group">
        <%= f.label :client_zipcode, 'Postcode', class: 'control-label col-md-3 col-sm-3 col-xs-12' %>
        <div class="col-md-6 col-sm-6 col-xs-12">
            <%= f.text_field :client_zipcode, class: 'form-control col-md-7 col-xs-12' %>
            <span class="fa fa-user form-control-feedback right" aria-hidden="true"></span>
        </div>
    </div>
    
    <div class="form-group">
        <%= f.label :client_residence, 'Woonplaats', class: 'control-label col-md-3 col-sm-3 col-xs-12' %>
        <div class="col-md-6 col-sm-6 col-xs-12">
            <%= f.text_field :client_residence, class: 'form-control col-md-7 col-xs-12' %>
            <span class="fa fa-user form-control-feedback right" aria-hidden="true"></span>
        </div>
    </div>
    
    <div class="form-group">
        <%= f.label :client_gender, 'Geslacht', class: 'control-label col-md-3 col-sm-3 col-xs-12' %>
        <div class="col-md-6 col-sm-6 col-xs-12">
           <%= f.check_box :client_gender, class: 'form-control col-md-7 col-xs-12' %>
        </div>
    </div>
    
    <div class="form-group">
        <%= f.label :client_phone, 'Telefoonnummer', class: 'control-label col-md-3 col-sm-3 col-xs-12' %>
        <div class="col-md-6 col-sm-6 col-xs-12">
            <%= f.text_field :client_phone, class: 'form-control col-md-7 col-xs-12' %>
            <span class="fa fa-user form-control-feedback right" aria-hidden="true"></span>
        </div>
    </div>
    <div class="form-group">
        <%= f.label :client_email, 'Emailadres', class: 'control-label col-md-3 col-sm-3 col-xs-12' %>
        <div class="col-md-6 col-sm-6 col-xs-12">
            <%= f.text_field :client_email, class: 'form-control col-md-7 col-xs-12' %>
            <span class="fa fa-user form-control-feedback right" aria-hidden="true"></span>
        </div>
    </div>
    <div class="form-group">
        <%= f.label :client_account_number, 'Rekeningnummer', class: 'control-label col-md-3 col-sm-3 col-xs-12' %>
        <div class="col-md-6 col-sm-6 col-xs-12">
            <%= f.text_field :client_account_number, class: 'form-control col-md-7 col-xs-12' %><br>
            <span class="fa fa-user form-control-feedback right" aria-hidden="true"></span>
        </div>
    </div>

    <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
        <%= link_to 'Annuleren', clients_path, :class => 'btn btn-primary' %>
        <%= f.submit 'Opslaan', :class => 'btn btn-success' %>
    </div>
    
<% end %>